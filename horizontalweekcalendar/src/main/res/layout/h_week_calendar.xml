<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/containerWeekDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/containerDay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textDay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nunito"
                android:gravity="center"
                android:textColor="@color/hwc_primary_text_color"
                android:textSize="@dimen/day_text_size"
                tools:text="Mon"></TextView>

            <CheckedTextView
                android:id="@+id/textDate1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/hwc_selector_day_bg_color"
                android:checked="true"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textColor="@drawable/hwc_selector_day_text_color"
                android:textSize="@dimen/date_text_size"
                tools:text="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerDay2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"

            android:orientation="vertical">

            <TextView
                android:id="@+id/textDay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nunito"
                android:gravity="center"
                android:textColor="@color/hwc_primary_text_color"
                android:textSize="@dimen/day_text_size"
                tools:text="Mon"></TextView>

            <CheckedTextView
                android:id="@+id/textDate2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/hwc_selector_day_bg_color"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textColor="@drawable/hwc_selector_day_text_color"
                android:textSize="@dimen/date_text_size"
                tools:text="2"></CheckedTextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerDay3"
            android:layout_width="0dp"
