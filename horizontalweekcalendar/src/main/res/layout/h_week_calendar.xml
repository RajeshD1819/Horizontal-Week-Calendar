                android:background="@drawable/hwc_selector_day_bg_color"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textColor="@drawable/hwc_selector_day_text_color"
                android:textSize="@dimen/date_text_size"
                tools:text="4"></CheckedTextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerDay6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
